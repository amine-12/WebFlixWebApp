<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="org.example.model.Film" table="FILM">

        <!-- Clé primaire -->
        <id name="filmId" column="FILM_ID">
            <generator class="native"/>
        </id>

        <!-- Propriétés simples -->
        <property name="titre" column="TITRE"/>
        <property name="anneeSortie" column="ANNEE_SORTIE"/>
        <property name="langueOriginale" column="LANGUE_ORIGINALE"/>
        <property name="dureeMinutes" column="DUREE_MINUTE"/>
        <property name="resume" column="RESUME" type="clob" not-null="true"/>
        <property name="affiche" column="AFFICHE"/>
        <property name="nbrCopiesDisponibles" column="NBR_COPIES_DISPONIBLES"/>

        <!-- Relation 1-n avec Copie (table COPIE_FILM) -->
        <set name="copies" table="COPIE_FILM" cascade="all" inverse="true">
            <key column="FILM_ID"/>
            <one-to-many class="org.example.model.Copie"/>
        </set>

    </class>
</hibernate-mapping>

<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="org.example.model.Acteur" table="PERSONNE_FILM">
        <id name="personneFilmId" column="PERSONNE_FILM_ID">
            <generator class="native"/>
        </id>
        <property name="nom" column="NOM"/>
        <property name="dateNaissance" column="DATE_NAISSANCE"/>
        <property name="lieuNaissance" column="LIEU_NAISSANCE"/>
        <property name="photo" column="PHOTO"/>
        <property name="biographie" column="BIOGRAPHIE" type="clob"/>
    </class>
</hibernate-mapping>

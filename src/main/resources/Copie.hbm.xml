<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="org.example.model.Copie" table="COPIE_FILM">

        <id name="copieId" column="COPIE_ID">
            <generator class="native"/>
        </id>

        <!-- Correction ici : relation Many-to-One -->
        <many-to-one name="film" class="org.example.model.Film" column="FILM_ID" not-null="false"/>

        <property name="estDisponible" column="EST_DISPONIBLE"/>

    </class>
</hibernate-mapping>
